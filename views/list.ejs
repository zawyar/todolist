<%- include("header") -%>
<div class="box" id="heading">
    <h1><%= listTitle %> List</h1>
</div>
<div class="box">
    <% for ( var i = 0; i < listItems.length;i++ ) { %>
        <form action="/delete" method="post">
            <div class="item">
                <input type="hidden" value="<%= listTitle %>" name="listName">
                <input value="<%= listItems[i]._id %>" onChange="this.form.submit()" name="checkbox" type="checkbox">
                <p><%= listItems[i].item_description %></p>
            </div>
        </form>
    <% } %>
    <form class="item" action="/" method="post">
        <input type="text" placeholder="New Item" name="nextItem" autocomplete="off">
        <button type="submit" name="list" value=<%= listTitle %>>+</button>
    </form>
</div>
<%- include("footer") -%>

